@page
@model _21880109.Pages.MH_SuaMatHangModel
@using _21880109.Entities
@using _21880109.DAL
<form method="post">
    <label for="TenMatHang">Nhap Ten Mat Hang:</label><br />
    <input type="text" name="TenMatHang" value="@Model.mh.TenMH"><br />
    <label for="ngaySX">Nhap Ngay SX:</label><br />
    <input type="date" name="ngaySX" value="@Model.mh.NgaySX"><br />
    <label for="handung">Nhap Han Su Dung:</label><br />
    <input type="date" name="handung" value="@Model.mh.HanDung"><br />
    <label for="ctysx">Nhap Cong Ty San Xuat:</label><br />
    <input type="text" name="ctysx" value="@Model.mh.CtySX"><br />


    <label for="loaihang">Nhap Loai Hang:</label><br />
    <select name="loaihang" value="">
        @{
            List<LoaiHang> dslh = LuuTruLoaiHang.DocDanhSachLoaiHang();
            foreach (LoaiHang lh in dslh)
            {
                <option value="@lh.TenLoaiHang">@lh.TenLoaiHang</option>
            }
        }
    </select>
    <br />
    <label for="gia">Nhap Gia:</label><br />
    <input type="text" name="gia" value="@Model.mh.Gia"><br /><br />

    <input type="submit" value="Sửa">
</form>

